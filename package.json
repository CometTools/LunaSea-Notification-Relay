{
    "name": "lunasea-notification-relay",
    "version": "0.0.7",
    "description": "Notification relay for LunaSea",
    "repository": "https://github.com/CometTools/LunaSea-Notification-Relay",
    "main": "index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=development nodemon --config nodemon.json src/index.ts",
        "build": "tsc",
        "serve": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register -r dotenv/config dist/src/index.js",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
    },
    "author": "Comet.Tools Software",
    "license": "GPL-3.0-only",
    "dependencies": {
        "axios": "^0.21.1",
        "basic-auth": "^2.0.1",
        "cross-env": "^7.0.3",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "firebase-admin": "^9.4.2",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "tslog": "^3.0.5"
    },
    "devDependencies": {
        "@types/basic-auth": "^1.1.3",
        "@types/express": "^4.17.9",
        "@types/node": "^14.14.19",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "eslint": "^7.17.0",
        "husky": "^4.3.6",
        "nodemon": "^2.0.6",
        "prettier": "2.2.1",
        "pretty-quick": "^3.1.0",
        "typescript": "^4.1.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
